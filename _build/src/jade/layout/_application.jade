include /mixin/_conditionalComment
doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    block title
      title #{meta.title}
    block path
      - var path = "";
    block meta
      include /include/meta/_basicinfo
    block style
      - var now = new Date();
      - var month = ( "00" + ( now.getMonth() + 1 ) ).slice( -2 );
      - var date = ( "00" + now.getDate() ).slice( -2 );
      - var hour = ( "00" + now.getHours() ).slice( -2 );
      - var minute = ( "00" + now.getMinutes() ).slice( -2 );
      - var dateParam = "" + month + date + hour + minute; 
      link(rel="stylesheet", href="#{path}css/main.css?v=" + dateParam, media="screen, print")
      link(rel="shortcut icon", type="image/vnd.microsoft.icon", href="#{path}favicon.ico?v=" + dateParam)
      link(rel="icon", type="image/vnd.microsoft.icon", href="#{path}favicon.ico?v=" + dateParam)
    // script(type="text/javascript" src="//media.line.me/js/line-button.js?v=20140411")
    script(src="http://cdn.mlkcca.com/v2.0.0/milkcocoa.js")
    +ltIE9
      script(src="#{path}js/lib/html5shiv.js")
  body
    block body
    block scripts
      include /include/script/_facebook
      include /include/script/_twitter
      if debug
        script.
          window._DEBUG = {
            state: true
          }; 
      if prod
        script(src="#{path}js/app.min.js?v=" + dateParam)
      else
        script(src="#{path}js/app.js")
